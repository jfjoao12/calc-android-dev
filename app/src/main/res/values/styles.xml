<resources>
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:backgroundTint">#FF9800</item>
    </style>

    <style name="EqualsButton" parent="CalculatorButton">
        <item name="android:backgroundTint">#F44336</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ClearButton" parent="CalculatorButton">
        <item name="android:backgroundTint">#D32F2F</item>
    </style>
</resources>
